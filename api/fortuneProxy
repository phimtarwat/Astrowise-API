// api/fortuneProxy.js
import { findUser, updateUsage } from "../lib/googleSheet.js";

export default async function handler(req, res) {
  const { user_id, token, question } = req.body;

  if (!user_id || !token || !question) {
    return res.status(400).json({ error: "missing_fields" });
  }

  // ğŸ” à¸•à¸£à¸§à¸ˆà¸ªà¸­à¸š user
  const user = await findUser(user_id, token);
  if (!user) {
    return res.status(401).json({
      error: "invalid_token",
      message: "âŒ à¹„à¸¡à¹ˆà¸à¸šà¸œà¸¹à¹‰à¹ƒà¸Šà¹‰ à¸à¸£à¸¸à¸“à¸²à¸‹à¸·à¹‰à¸­à¹à¸à¹‡à¸à¹€à¸à¸ˆà¹ƒà¸«à¸¡à¹ˆà¸„à¸£à¸±à¸š",
    });
  }

  // â³ à¸•à¸£à¸§à¸ˆà¸§à¸±à¸™à¸«à¸¡à¸”à¸­à¸²à¸¢à¸¸
  const today = new Date().toISOString().slice(0, 10);
  if (user.expiry && today > user.expiry) {
    return res.status(401).json({
      error: "expired",
      message: "âŒ à¸ªà¸´à¸—à¸˜à¸´à¹Œà¸«à¸¡à¸”à¸­à¸²à¸¢à¸¸à¹à¸¥à¹‰à¸§ à¸à¸£à¸¸à¸“à¸²à¸‹à¸·à¹‰à¸­à¹à¸à¹‡à¸à¹€à¸à¸ˆà¹ƒà¸«à¸¡à¹ˆà¸„à¸£à¸±à¸š",
    });
  }

  // ğŸŸï¸ à¸•à¸£à¸§à¸ˆ quota
  if (user.quota <= 0) {
    return res.status(401).json({
      error: "no_quota",
      message: "âŒ à¸ªà¸´à¸—à¸˜à¸´à¹Œà¸«à¸¡à¸”à¹à¸¥à¹‰à¸§ à¸à¸£à¸¸à¸“à¸²à¸‹à¸·à¹‰à¸­à¹à¸à¹‡à¸à¹€à¸à¸ˆà¹ƒà¸«à¸¡à¹ˆà¸„à¸£à¸±à¸š",
    });
  }

  // âœ… à¸«à¸±à¸ quota
  const newQuota = user.quota - 1;
  const updated = await updateUsage(user_id, token, newQuota);

  if (!updated) {
    return res.status(500).json({
      error: "update_failed",
      message: "âŒ à¹„à¸¡à¹ˆà¸ªà¸²à¸¡à¸²à¸£à¸–à¸­à¸±à¸›à¹€à¸”à¸•à¸ªà¸´à¸—à¸˜à¸´à¹Œà¹„à¸”à¹‰",
    });
  }

  // ğŸ”® à¸„à¸·à¸™à¸œà¸¥à¸à¸²à¸£à¸—à¸³à¸™à¸²à¸¢ (mock à¸«à¸£à¸·à¸­à¹€à¸£à¸µà¸¢à¸ core engine)
  const fortune = `ğŸ”® à¸„à¸³à¸—à¸³à¸™à¸²à¸¢à¸ªà¸³à¸«à¸£à¸±à¸š "${question}" (Demo result)`;

  return res.json({
    success: true,
    remaining: newQuota,
    used: user.used_count + 1,
    answer: fortune,
  });
}

