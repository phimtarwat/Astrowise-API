// api/fortuneProxy.js
import { findUser, updateUsage } from "../lib/googleSheet.js";
// à¸ªà¸¡à¸¡à¸•à¸´à¸§à¹ˆà¸² core à¸ˆà¸£à¸´à¸‡à¸„à¸·à¸­ astrology-core
import { getAstrologyPrediction } from "../lib/astrologyCore.js";

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "method_not_allowed" });
  }

  const { user_id, token, question } = req.body;

  if (!user_id || !token || !question) {
    return res.status(400).json({
      error: "missing_fields",
      message: "âŒ à¸•à¹‰à¸­à¸‡à¸ªà¹ˆà¸‡ user_id, token à¹à¸¥à¸° question à¸¡à¸²à¸”à¹‰à¸§à¸¢",
    });
  }

  // ğŸ” à¸«à¸² user
  const user = await findUser(user_id, token);
  if (!user) {
    return res.status(401).json({
      error: "invalid",
      message: "âŒ à¹„à¸¡à¹ˆà¸à¸š user_id/token à¹ƒà¸™à¸£à¸°à¸šà¸š à¸à¸£à¸¸à¸“à¸²à¸‹à¸·à¹‰à¸­à¹à¸à¹‡à¸à¹€à¸à¸ˆà¹ƒà¸«à¸¡à¹ˆ",
    });
  }

  // ğŸ“Œ à¸•à¸£à¸§à¸ˆ expiry
  const today = new Date().toISOString().slice(0, 10);
  if (user.expiry && today > user.expiry) {
    return res.status(401).json({
      error: "expired",
      message: "âŒ à¸ªà¸´à¸—à¸˜à¸´à¹Œà¸«à¸¡à¸”à¸­à¸²à¸¢à¸¸à¹à¸¥à¹‰à¸§ à¸à¸£à¸¸à¸“à¸²à¸‹à¸·à¹‰à¸­à¹à¸à¹‡à¸à¹€à¸à¸ˆà¹ƒà¸«à¸¡à¹ˆ",
    });
  }

  // ğŸ“Œ à¸•à¸£à¸§à¸ˆ quota
  if (user.quota <= 0) {
    return res.status(401).json({
      error: "no_quota",
      message: "âŒ à¸ªà¸´à¸—à¸˜à¸´à¹Œà¸«à¸¡à¸”à¹à¸¥à¹‰à¸§ à¸à¸£à¸¸à¸“à¸²à¸‹à¸·à¹‰à¸­à¹à¸à¹‡à¸à¹€à¸à¸ˆà¹ƒà¸«à¸¡à¹ˆà¸„à¹ˆà¸°",
    });
  }

  try {
    // âœ¨ à¹€à¸£à¸µà¸¢à¸ core à¸ˆà¸£à¸´à¸‡
    const fortune = await getAstrologyPrediction(question);

    // âœ… à¸–à¹‰à¸²à¹„à¸”à¹‰à¸„à¸³à¸•à¸­à¸š â†’ à¸«à¸±à¸ quota
    const newQuota = user.quota - 1;
    const updated = await updateUsage(user_id, token, newQuota);

    if (!updated) {
      return res.status(500).json({
        error: "update_failed",
        message: "âŒ à¹„à¸¡à¹ˆà¸ªà¸²à¸¡à¸²à¸£à¸–à¸­à¸±à¸›à¹€à¸”à¸• quota à¹ƒà¸™à¸à¸²à¸™à¸‚à¹‰à¸­à¸¡à¸¹à¸¥à¸ªà¸¡à¸²à¸Šà¸´à¸à¹„à¸”à¹‰",
      });
    }

    // âš ï¸ à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™ quota à¹ƒà¸à¸¥à¹‰à¸«à¸¡à¸”
    let warning = "";
    if (newQuota < 3) {
      warning = `âš ï¸ à¹€à¸«à¸¥à¸·à¸­à¸ªà¸´à¸—à¸˜à¸´à¹Œà¸­à¸µà¸ ${newQuota} à¸„à¸£à¸±à¹‰à¸‡`;
    }

    return res.json({
      success: true,
      remaining: newQuota,
      used: user.used_count + 1,
      answer: fortune,
      warning,
    });
  } catch (err) {
    console.error("âŒ Error calling astrology core:", err.message);
    return res.status(500).json({
      error: "fortune_failed",
      message: "âŒ à¹„à¸¡à¹ˆà¸ªà¸²à¸¡à¸²à¸£à¸–à¸ªà¸£à¹‰à¸²à¸‡à¸„à¸³à¸—à¸³à¸™à¸²à¸¢à¹„à¸”à¹‰ à¸à¸£à¸¸à¸“à¸²à¸¥à¸­à¸‡à¹ƒà¸«à¸¡à¹ˆ",
    });
  }
}
